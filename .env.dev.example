# Local dev defaults for `docker-compose.dev.yml`
# Copy to `.env` to enable (Compose auto-loads `.env`).

# Logging / base URL
LOG_LEVEL=debug
PUBLIC_URL=http://localhost:3000
SESSION_SECRET=dev-change-me

# OIDC (optional)
OIDC_ENABLED=false
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_SCOPES=openid,profile,email,groups
OIDC_ADMIN_GROUPS=

# Collabora (optional)
COLLABORA_URL=
COLLABORA_DISCOVERY_URL=
COLLABORA_SECRET=

# OnlyOffice (optional)
ONLYOFFICE_URL=
ONLYOFFICE_SECRET=
ONLYOFFICE_LANG=en
ONLYOFFICE_FILE_EXTENSIONS=

# Personal folders (optional)
USER_DIR_ENABLED=false
USER_ROOT=/srv/users
